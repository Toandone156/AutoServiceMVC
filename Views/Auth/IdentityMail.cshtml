@{
    ViewData["Title"] = "Forgot Password";
}

<section class="ftco-section contact-section">
	<div class="container mt-5">
		<div class="row justify-content-center mb-5">
			<div class="col-md-7 heading-section text-center ftco-animate">
				<span class="subheading">Forgetful</span>
				<h2 class="mb-4">Return coffeer</h2>
			</div>
		</div>

		<div class="row block-9">
			<div class="col-md-4"></div>
			<div class="col-md-4 ftco-animate">
				<form asp-controller="Auth" asp-action="IdentityMail" class="contact-form">
					<div class="form-group">
						<input type="email" class="form-control" name="mail" placeholder="Your email">
					</div>

					<div class="form-group">
						<a asp-controller="Auth" asp-action="Login">You remembered</a>
					</div>

					<div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

					<div class="form-group mt-2">
						<input type="submit" value="Get password" class="btn btn-primary py-3 px-5">
					</div>
				</form>
			</div>
			<div class="col-md-4"></div>
		</div>
	</div>
</section>
