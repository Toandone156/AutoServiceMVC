@model AutoServiceMVC.Models.ChangePassword

@{
    ViewData["Title"] = "Change password";
}

<section class="ftco-section contact-section">
	<div class="container mt-5">
		<div class="row justify-content-center mb-5">
			<div class="col-md-7 heading-section text-center ftco-animate">
				<span class="subheading">Change</span>
				<h2 class="mb-4">Password</h2>
			</div>
		</div>

		<div class="row block-9">
			<div class="col-md-4"></div>
			<div class="col-md-4 ftco-animate">
				<form asp-controller="Auth" asp-action="ChangePassword" method="post" class="contact-form">
					<input asp-for="UserId" type="hidden" value="@ViewData["Id"]" />
					<div class="form-group">
						<input class="form-control" value="@ViewData["Username"]" disabled>
					</div>
					<div class="form-group">
						<input asp-for="OldPassword" class="form-control" placeholder="Old Password">
						<span asp-validation-for="OldPassword" class="text-white"></span>
					</div>
					<div class="form-group">
						<input asp-for="Password" class="form-control" placeholder="New Password">
						<span asp-validation-for="Password" class="text-white"></span>
					</div>
					<div class="form-group">
						<input asp-for="AgainPassword" class="form-control" placeholder="Re-enter Password">
						<span asp-validation-for="AgainPassword" class="text-white"></span>
					</div>

					<div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

					<div class="form-group mt-2">
						<input type="submit" value="Change Password" class="btn btn-primary py-3 px-5">
					</div>
				</form>
			</div>
			<div class="col-md-4"></div>
		</div>
	</div>
</section>




