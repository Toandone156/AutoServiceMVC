@model AutoServiceMVC.Models.User

@{
    ViewData["Title"] = "My profile";
}

<section class="title-user-profile">
            <span class="subheading-user">My Profile</span>
</section>
<section class="user-profile-section">
    <div class="page-content page-container" id="page-content">
        <div class="padding">
            <div class="row container d-flex justify-content-center" style="margin: 0 auto;">
                <div class="col-md-12 uspro">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-md-4 bg-c-lite-green user-profile">
                                <div class="card-block text-center text-white">
                                    <div class="m-b-25">
                                        <img src="images/@(Model.UserTypeId).png" style="width: 100px; height: 100px;"
                                            class="img-radius">
                                    </div>
                                    <h4 class="f-w-600 fullname" style="color: white; font-size: 25px;">@Model.FullName
                                    </h4>
                                    
                                    @if(Model.Username != null && Model.HashPassword != null)
                                    {
                                        <h>Username: @Model.Username</h>
                                        <p>
                                            Password: ****** <a href="#" id="changepasswordbutton" style="color: #fff;"><i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16 update-button"></i></a>
                                        </p>
                                    }

                                </div>
                            </div>
                            <div class="col-md-8 info-user">
                                <div class="card-block">
                                    <h6 class="m-b-20 p-b-5 b-b-default f-w-600 info-user-title">Information</h6>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p class="m-b-10 f-w-600"><ion-icon name="mail"
                                                    style="padding-right: 10px;"></ion-icon> Email</p>
                                            <h6 id="user-email" class="text-muted f-w-400">@Model.Email</h6>
                                        </div>
                                        <div class="col-md-6">
                                            <p class="m-b-10 f-w-600"><ion-icon name="server"
                                                    style="padding-right: 10px;"></ion-icon>Points</p>
                                            <h6 class="text-muted f-w-400">@Model.Point</h6>
                                        </div>
                                    </div>
                                    <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600 info-user-title">Others</h6>
                                    <div class="row">
                                            <div class="col-md-6">
                                                <p class="m-b-10 f-w-600"><ion-icon name="document-text" style="padding-right: 10px;"></ion-icon>Total bill ordered</p>
                                            <h6 class="text-muted f-w-400">@(Model.Orders?.Count ?? 0)</h6>
                                            </div>
                                        <div class="col-md-6">
                                            <p class="m-b-10 f-w-600"><ion-icon name="logo-usd"
                                                    style="padding-right: 10px;"></ion-icon>Total money bought</p>
                                            <h6 class="text-muted f-w-400">@Model.TotalAmount.ToString("N0") ₫</h6>
                                        </div>
                                    </div>
                                    <ul class="social-link list-unstyled m-t-40 m-b-10">
                                        <li><img src="images/icons8-hot-beverage-48.png"></li>
                                        <li><img src="images/icons8-teacup-without-handle-48.png"></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/user/profile.css" />
}

@section Scripts {
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script>
        var changePassButton = document.getElementById("changepasswordbutton");

        changePassButton.addEventListener("click", e => {
            e.preventDefault();

            $.confirm({
                title: 'Change password',
                content: 'You want to change password now?</br> We will send a email to change password.',
                buttons: {
                    confirm: {
                        text: "Send mail",
                        btnClass: 'btn-orange',
                        keys: ['enter'],
                        action: function () {
                            debugger

                            showToast("Email in way to you.");

                            changePasswordApi(document.getElementById("user-email").innerHTML);
                        }
                    },
                    cancel: function () {
                        showToast("Cancelled change password.");
                    }
                }
            });
        })
    </script>
}
