@model IEnumerable<AutoServiceMVC.Models.Coupon>
@{
    ViewData["Title"] = "Coupon";
}

<div class="row tm-content-row">
    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
        <div class="tm-bg-primary-dark tm-block tm-block-products">
            <div class="tm-product-table-container">
                <table class="table table-hover tm-table-small tm-product-table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CouponCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PointAmount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StartAt)
                            </th>
                            <th>
                                Status
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td scope="col">
                                    <a asp-action="Details" asp-route-id="@item.CouponId"
                                       class="text-reset text-decoration-none">
                                        @Html.DisplayFor(modelItem => item.CouponCode)
                                    </a>
                                </td>
                                <td scope="col">
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td scope="col">
                                    @Html.DisplayFor(modelItem => item.PointAmount)
                                </td>
                                <td scope="col">
                                    @Html.DisplayFor(modelItem => item.StartAt)
                                </td>
                                <td scope="col">
                                    @if (item.StartAt > DateTime.Now || item.EndAt < DateTime.Now)
                                    {
                                        <div class="tm-status-circle cancelled"></div>
                                        <span>Ended</span>
                                    }
                                    else
                                    {
                                        <div class="tm-status-circle done"></div>
                                        <span>On Using</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- table container -->
            <a asp-action="Create"
               class="btn btn-primary btn-block text-uppercase mb-3">Add new coupon</a>
        </div>
    </div>
</div>
