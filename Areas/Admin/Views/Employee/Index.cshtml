@model IEnumerable<AutoServiceMVC.Models.Employee>
@{
    ViewData["Title"] = "Employee";
}

<div class="row tm-content-row">
    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
        <div class="tm-bg-primary-dark tm-block tm-block-products">
            <div class="tm-product-table-container">
                <table class="table table-hover tm-table-small tm-product-table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FullName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StartDate)
                            </th>
                            <th>
                                Status
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td scope="col">
                                    <a asp-action="Details" asp-route-id="@item.EmployeeId"
                                       class="text-reset text-decoration-none">
                                        @Html.DisplayFor(modelItem => item.FullName)
                                    </a>
                                </td>
                                <td scope="col">
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td scope="col">
                                    @Html.DisplayFor(modelItem => item.StartDate)
                                </td>
                                <td scope="col">
                                    @if (item.EndDate < DateTime.Now)
                                    {
                                        <div class="tm-status-circle ended"></div>
                                        <span>Ended</span>
                                    }else{
                                        <div class="tm-status-circle working"></div>
                                        <span>On Working</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- table container -->
            <a asp-area="Admin" asp-controller="Auth" asp-action="Register"
               class="btn btn-primary btn-block text-uppercase mb-3">Add new employee</a>
        </div>
    </div>
</div>
