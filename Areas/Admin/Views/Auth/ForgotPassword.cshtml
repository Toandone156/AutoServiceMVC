@{
    ViewData["Title"] = "Forgot password";
    Layout = "_AuthenLayout";
}

<div class="row">
    <div class="col-lg-6 d-none d-lg-block">
        <img src="~/img/admin/undraw_forgot_password_re_hxwm.svg" class="p-5 w-100 h-100" alt="" srcset="">
    </div>
    <div class="col-lg-6">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-2 font-weight-bold">Forgot Your Password?</h1>
                <p class="mb-4">Just enter your email address below and we'll send you a link to reset your password!</p>
            </div>
            <form  asp-action="ForgotPassword" method="post" class="user">
                <div class="form-group">
                    <input type="email" class="form-control form-control-user" name="email"
                           id="exampleInputEmail" aria-describedby="emailHelp"
                           placeholder="Enter Email Address...">
                </div>
                <button type="submit" class="btn btn-primary btn-user btn-block">
                    Reset Password
                </button>
            </form>
            <hr>
            <div class="text-center">
                <a class="small font-weight-bold" asp-action="Login">Already have an account? Login!</a>
            </div>
        </div>
    </div>
</div>
