@model AutoServiceMVC.Models.Employee

@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-12 col-sm-6 col-md-4 mx-auto">
        <div class="card d-flex shadow mb-4">
            <div class="d-flex py-3 justify-content-center position-relative">
                <img class="w-75 rounded" src="~/img/admin/undraw_profile.svg" alt="">
            </div>
            <div class="card-body py-3">
                <h6 class="m-0 font-weight-bold text-primary text-center">@Model.FullName</h6>
                <h6 class="m-0 font-weight-bold text-muted p-2 rounded mt-3 bg-gray-300">
                    <div class="d-flex justify-content-between mt-2">
                        <span>Username: </span>
                        <span class="text-dark font-weight-bold">@Model.Username</span>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <span>Email: </span>
                        <span class="text-dark font-weight-bold">@Model.Email</span>
                    </div>
                    <div class="d-flex mt-2 justify-content-between">
                        <span>Password: </span>
                        <a href="#" class="text-dark btn-link font-weight-bold" data-toggle="modal" data-target="#changePasswordModal">
                            ********** <i class="fas fa-fw fa-pen"></i>
                        </a>
                    </div>
                </h6>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="changePasswordModal" style="top: 24%" tabindex="-1" role="dialog"
                aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-bold" id="exampleModalLabel">Want to change password</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Select "Change" below if you are ready to change password.</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" asp-action="ChangePassword">Change <i class="fas fa-fw fa-exchange-alt"></i></a>
            </div>
        </div>
    </div>
</div>
