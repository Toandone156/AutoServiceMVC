@model AutoServiceMVC.Models.ResetPassword

@{
    ViewData["Title"] = "Reset Password";
    Layout = "_AuthenLayout";
}

<div class="row">
    <div class="col-lg-6 d-none d-lg-block">
        <img src="~/img/admin/undraw_forgot_password_re_hxwm.svg" class="p-5 w-100 h-100" alt="" srcset="">
    </div>
    <div class="col-lg-6">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-2 font-weight-bold">Change password now</h1>
                <p class="mb-4">Enter new password and again password to change password now</p>
            </div>
            <form asp-action="ResetPassword" method="post" class="user">
                <div class="form-group">
                    <input asp-for="UserId" class="form-control form-control-user" value="@ViewData["EmployeeId"]" hidden>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control form-control-user" value="@ViewData["Username"]" disabled>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control form-control-user" placeholder="Enter password...">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="AgainPassword" class="form-control form-control-user" placeholder="Enter password again...">
                    <span asp-validation-for="AgainPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-user btn-block">
                    Reset Password
                </button>
            </form>
            <hr>
            <div class="text-center">
                <a class="small font-weight-bold" asp-action="Login">Remember password? Login!</a>
            </div>
        </div>
    </div>
</div>