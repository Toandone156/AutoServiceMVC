@model AutoServiceMVC.Models.Register
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Register";
    Layout = "_AuthenLayout";
    var dropdownlist = new SelectList(ViewBag.RoleList, "RoleId", "RoleName");
}

<div class="row">
    <div class="col-12 mx-auto tm-login-col">
        <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="tm-block-title mb-4">Welcome to Dashboard, Register</h2>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-12">
                    <form asp-action="Register" method="post" class="tm-login-form">
                        <div asp-validation-summary="ModelOnly" class="text-white"></div>
                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input asp-for="Username"
                                    class="form-control validate"
                                    value="" />
                            <span asp-validation-for="Username" class="text-white"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Password"></label>
                            <input asp-for="Password"
                                    class="form-control validate"
                                    value="" />
                            <span asp-validation-for="Password" class="text-white"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AgainPassword"></label>
                            <input asp-for="AgainPassword"
                                    class="form-control validate"
                                    value="" />
                            <span asp-validation-for="AgainPassword" class="text-white"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FullName"></label>
                            <input asp-for="FullName"
                                    class="form-control validate"
                                    value="" />
                            <span asp-validation-for="FullName" class="text-white"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email"
                                    class="form-control validate"
                                    value="" />
                            <span asp-validation-for="Email" class="text-white"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleId"></label>
                            <select asp-for="RoleId"
                                    asp-items="@dropdownlist"
                                    class="custom-select tm-select-accounts">
                            </select>
                        </div>
                        <div class="form-group mt-4">
                            <button type="submit"
                                    class="btn btn-primary btn-block text-uppercase w-100">
                                Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
