@model AutoServiceMVC.Models.Table

@{
    ViewData["Title"] = "Edit Table";
    var accessTableLink = Url.ActionLink("AccessTable", "Order", new { area = "" ,tablecode = Model.TableCode });

    var qrImageLink = "https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=" + accessTableLink;
}

<h1 class="h3 mb-4 text-gray-800">
    <a asp-action="Index" class="btn btn-secondary btn-icon-split mt-2">
        <span class="icon text-white-50">
            <i class="fas fa-backward"></i>
        </span>
        <span class="text font-weight-bold">Table Management</span>
    </a>
</h1>
<section class="card shadow mb-4 mx-auto" style="max-width: 700px">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Table Details</h6>
    </div>
    <div class="card-body row">
        <form class="mb-3 col-12 row" asp-action="Edit" method="post">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TableId"/>
                <div class="form-group">
                    <label asp-for="TableName"></label>
                    <input asp-for="TableName" class="form-control">
                    <span asp-validation-for="TableName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TableCode"></label>
                    <input asp-for="TableCode" class="form-control">
                    <span asp-validation-for="TableCode" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="tm-product-img-dummy mx-auto text-center">
                    <img id="preview" src="@qrImageLink" alt="Product image" class="img-fluid mx-auto">
                </div>
            </div>
            <div class="col-md-12 mt-2">
                <button type="submit" class="btn btn-warning font-weight-bold btn-block mt-3">Update</button>
                <a href="#" data-toggle="modal" data-target="#deleteModal"
                   class="btn btn-danger btn-block">Delete Now</a>
            </div>
        </form>
    </div>
</section>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete table</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Select "Delete" below if you are ready to delete this table.</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@Model.TableId">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function forceDownload(link) {
            var url = "@qrImageLink";
            var fileName = link.getAttribute("download");
            var xhr = new XMLHttpRequest();
            xhr.open("GET", url, true);
            xhr.responseType = "blob";
            xhr.onload = function () {
                var urlCreator = window.URL || window.webkitURL;
                var imageUrl = urlCreator.createObjectURL(this.response);
                var tag = document.createElement('a');
                tag.href = imageUrl;
                tag.download = fileName;
                document.body.appendChild(tag);
                tag.click();
                document.body.removeChild(tag);
            }
            xhr.send();
        }
    </script>
}