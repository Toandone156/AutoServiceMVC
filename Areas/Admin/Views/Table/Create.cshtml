@model AutoServiceMVC.Models.Table

@{
    ViewData["Title"] = "Create Table";
}

<h1 class="h3 mb-4 text-gray-800">
    <a asp-action="Index" class="btn btn-secondary btn-icon-split mt-2">
        <span class="icon text-white-50">
            <i class="fas fa-backward"></i>
        </span>
        <span class="text font-weight-bold">Table Management</span>
    </a>
</h1>
<section class="card shadow mb-4 mx-auto" style="max-width: 700px">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Table Details</h6>
    </div>
    <div class="card-body row">
        <form class="mb-3 col-12 row" asp-action="Create" method="post">
            <div class="col-md-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TableId" />
                <div class="form-group">
                    <label asp-for="TableName"></label>
                    <input asp-for="TableName" class="form-control" placeholder="Enter table name">
                    <span asp-validation-for="TableName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TableCode"></label>
                    <input asp-for="TableCode" class="form-control" placeholder="Enter table code">
                    <span asp-validation-for="TableCode" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12 mt-2">
                <button type="submit" class="btn btn-success font-weight-bold btn-block mt-3">Add new table</button>
            </div>
        </form>
    </div>
</section>